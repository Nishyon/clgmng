@using CollageMng.Models;
@model IEnumerable<Gallery>


<section class="section">
    <div class="section-body">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Light Gallery</h4>
                    </div>
                    <div class="card-body">
                        <div id="aniimated-thumbnials" class="list-unstyled row clearfix">
                            @foreach (var Pics in Model)
                            {
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    
                                        <form asp-action="RemoveImage" asp-controller="Admin">
                                        <img class="img-responsive thumbnail" src="@Url.Content("~/Gallery/"+Pics.Photo)" height="170px" alt="">
                                        <input class="btn btn-danger" type="hidden" value=@Pics.Id name="Imgid">
                                        <button type="submit" class="btn btn-danger">Remove</button>
                                        </form>
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>