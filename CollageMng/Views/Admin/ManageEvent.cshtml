@model CollageMng.Models.Event
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">
        @ViewBag.Message
    </div>
}


<div class="card">
    <div class="card-header">
        <h4>Add Event </h4>
    </div>
    <form method="post" asp-action="ManageEvent" asp-controller="AdminController" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label">Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Name, new { type = "text", @class = "form-control", id = "name", placeholder = "Name" })
                </div>
            </div>
            <div class="form-group row">
                <label for="idate" class="col-sm-3 col-form-label">Date</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control", id = "date", placeholder = "Date" })
                </div>
            </div>
            <div class="form-group row">
                <label for="msg" class="col-sm-3 col-form-label">Message</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Msg, new { type = "text", @class = "form-control", id = "msg", placeholder = "Message" })
                </div>
            </div>
            <div class="form-group row">
                <label for="img" class="col-sm-3 col-form-label">Image</label>
                <div class="col-sm-9">
                    <input type="file" name="file" id="file" class="form-control" />
                    
                </div>
            </div>




        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Add Event" />
        </div>

    </form>
</div>
