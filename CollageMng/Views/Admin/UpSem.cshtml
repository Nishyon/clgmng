@using CollageMng.Models
@model IEnumerable<Studata>

@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<div class="card" style="overflow-x:scroll;">
    <div class="card-header">
        
        <h4>Department : @ViewBag.dname || Semester : @ViewBag.sem</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Student Number</th>
                    <th scope="col">Username</th>
                    <th scope="col" width="0px"></th>
                    <th scope="col" width="0px"></th>
                    <th scope="col">Semester</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <form method="post" asp-action="UpSem" asp-controller="Admin">
                    <tr>

                        <th scope="row"><input type="hidden" value=@item.Stuno name="sno" />@item.Stuno</th>
                        <td> @item.Username</td>
                        <th scope="row" width="0px"><input type="hidden" value=@item.Dname name="dname"  /></th>
                        <th scope="row" width="0px"><input type="hidden" value=@ViewBag.sem name="osem" /></th>
                        <td>  <input type="number" value=@item.Sem name="sem" /></td>
                        <td><input type="submit" class="btn btn-primary" value="Change" /></td>

                    </tr>
                    </form>
                }
            </tbody>
        </table>
    </div>
</div>